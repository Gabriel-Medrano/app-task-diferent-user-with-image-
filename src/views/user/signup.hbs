<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h1>Account Register</h1>
        </div>
        <div class="card-body">
            <form action="" method="post">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Input of name" value="{{name}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Input of email" value="{{email}}">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="Input of password" value="{{password}}">
                </div>
                <div class="form-group">
                    <input type="password" name="confirm_password" class="form-control" placeholder="Confirm password" value="{{confirm_password}}">
                </div>
                  <div class="form-group">
                      <button class="btn btn-info d-block">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>